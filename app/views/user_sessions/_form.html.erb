<!-- login view  -->

<%= form_tag user_sessions_path, :method => :post do %>
<div class="same_width1">
  <div class="field">
    <%= label_tag :email, "Email eingeben", class: "same_width1_input" %>
    <%= text_field_tag :email, "" ,class: "same_width1_input" %>
  </div>
  <div class="field">
    <%= label_tag :password, "Passwort eingeben" %><br />
    <%= password_field_tag :password , "", class: "same_width1_input"%>
  </div>
   <!-- Remember me button-->
   <div> 
      <%= check_box_tag :remember, params[:remember], true %>
      <%= label_tag :remember %>
    </div> <br/>
  <div class="actions">
  <div class="btn-group wider_btn_group">
    <%= submit_tag "Login", class: "btn btn-success my_button1" %>
    <%= link_to '/password_resets/index' , class: 'btn btn-warning my_button1' do%><span class="has-tooltip" data-toggle="tooltip" data-container="body" title="Passwort vergessen?"> <i class="glyphicon glyphicon-question-sign"></i></span><% end %>
  </div>
  </div>
  </div>
 <% end %>
